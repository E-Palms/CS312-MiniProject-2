<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>API Integration</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
      .custom-bg {
          background-color: bisque;
          background-size: cover;
          background-position: center center;
          background-repeat: no-repeat;
          min-height: 100vh;
      }
  </style>
</head>

<body class="custom-bg">
   <div class="container mw-100 d-flex justify-content-center p-5">
      <div class="container mw-75 d-flex justify-content-around p-5">
         <form action="/search" class="row bg-white mw-75" style="border-radius: 15px;">
            <div class="form-group col-sm-12">
               <label for="drinkName" class=""><h4>Search for a drink:</h4></label>
               <input class="form-control" type="text" name="drinkName">
            </div>
            <div class="col-sm-8"></div>
            <div class="form-group col-sm-4">
               <button class="btn btn-primary form-control" type="search" value="search">Search</button>
            </div>
         </form>

         <form action="/suprise" class="row bg-white" style="border-radius: 15px;">
            <div class="form-group align-self-center p-4">
               <button class="btn btn-warning form-control align-self-center" type="submit" value="suprise">Surprise Me!</button>
            </div>
         </form>
      </div>
   </div>

   <div class="container">
      <div class="row d-flex justify-content-center">
         <% if (drinks && drinks.length > 0) { %>
            <% drinks.forEach((drink, index) => { %>
               <div class="col-md-6 mb-4 d-flex justify-content-center p-2">
                  <div class="card" style="width: 18rem;">
                     <img class="card-img-top img-fluid" src="<%= drink.strDrinkThumb %>" alt="<%= drink.strDrink %>">
                     <div class="card-body">
                        <h5 class="card-title"><%= drink.strDrink %></h5>
                        <p class="card-text">
                           Ingredients:
                           <ul>
                              <% for (let i = 1; i <= 15; i++) { %>
                                 <% if (drink[`strIngredient${i}`]) { %>
                                    <li><%= drink[`strMeasure${i}`] %> <%= drink[`strIngredient${i}`] %></li>
                                 <% } %>
                              <% } %>
                           </ul>
                        </p>
                     </div>
                  </div>
               </div>

               <% if ((index + 1) % 2 === 0) { %>
                  </div><div class="row">
               <% } %>
            <% }); %>
         <% } else { %>
            <div class="d-flex justify-content-center p-2">
               <div class="d-flex justify-content-center p-2 bg-white" style="width: 18rem; border-radius: 25px;">
                  <h4>No Drinks Found</h4>
               </div>
            </div>
         <% } %>
      </div>
   </div>

   <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script> 
</body>
</html>
